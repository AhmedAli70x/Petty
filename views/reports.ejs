<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Missing Pets</title>
    <link rel="stylesheet" href="style/style.css" >
</head>

<body>

    <div class="container">
       
        <%- include('include/nav' ); %>
        
        <section class="reports-section">
             
       
           
                <form   class="Form reportForm">
                    <div class="row">
                      <div class="col-25">
                        <label for="name">Name</label>
                      </div>
                      <div class="col-75">
                        <input type="text" id="name" name="name" placeholder="Pet name..">
                        <div class="error"></div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-25">
                        <label for="animal">Animal</label>
                      </div>
                      <div class="col-75">
                        <input type="text" id="animal" name="animal" placeholder="Pet type.." >
                        <div class="error"></div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-25">
                        <label for="description">Description</label>
                      </div>
                      <div class="col-75">
                        <textarea id="description" name="description" placeholder="Pet description.." style="height:50px" ></textarea>
                        <div class="error"></div>
                      </div>
                      
                    </div>
                    <div class="row">
                      <div class="col-25">
                        <label for="road">Road</label>
                      </div>
                      <div class="col-75">
                        <input type="text" id="road" name="road" placeholder="Enter road..">
                        <div class="error"></div>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-25">
                        <label for="area">Area</label>
                      </div>
                      <div class="col-75">
                        <input type="text" id="area" name="area" placeholder="Enter area..">
                        <div class="error"></div>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-25">
                        <label for="city">City</label>
                      </div>
                      <div class="col-75">
                        <input type="text" id="city" name="city" placeholder="Enter city..">
                        <div class="error"></div>
                      </div>
                  </div>
          
                    <div class="row">
                      <input type="submit" class="submitbtn" value="Submit">
                    </div>
                    <div id="success"></div>
                  </form>
                      
               
                  <div class="reports-result">
                    <h3>Reports</h3>
                  </div>
            <div class="col-22">
                <div class="reports">
                  
               
                </div>
        
            </div>
          
              
        </section>

  
       <%- include('include/footer'); %>
       
    </div>
     <script   src="scripts/validation.js"></script>
    <script src="scripts/reports.js"></script>
   
   


</body>
</html>