<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Petty</title>
    <link rel="stylesheet" href="/style/style.css" >
</head>

<body>

    <div class="container">
       
        <%- include('include/nav' ); %>
  
      <form   class="Form updateForm">
          <div class="row">
            <div class="col-25">
              <label for="name">Name</label>
            </div>
            <div class="col-75">
              <input type="text" id="name" name="name" placeholder="Pet name..">
              <div class="error"></div>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="animal">Animal</label>
            </div>
            <div class="col-75">
              <input type="text" id="animal" name="animal" placeholder="Pet type.." >
              <div class="error"></div>
            </div>
          </div>
          <div class="row">
            <div class="col-25">
              <label for="description">Description</label>
            </div>
            <div class="col-75">
              <textarea id="description" name="description" placeholder="Pet description.." style="height:100px" ></textarea>
              <div class="error"></div>
            </div>
          </div>
          <div class="row">
              <div class="col-25">
                <label for="location">Location</label>
              </div>
              <div class="col-75">
                <input type="text" id="location" name="location" placeholder="Pet location..">
                <div class="error"></div>
              </div>
          </div>

          <div class="row"> 
 

            <input type="submit" class="submitbtn" value="Update">
            <input type="button" class="deleteBtn" id ="delete" value="Delete">
          </div>
          <div class="row"> 
           
          </div>
          <div id="success"></div>
        </form>

      
            
       <%- include('include/footer'); %>
       
    </div>
    <script   src="/scripts/validation.js"></script>

    <script   src="/scripts/reportDetails.js"></script>

</body>
</html>